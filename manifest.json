{
  "manifest_version": 2,
  "name": "Unblock Imgur",
  "description": "Loads Imgur content from DuckDuckGo proxy with basic functionality",
  "version": "0.3",
  "browser_specific_settings": {
    "gecko": {
      "id": "unblock-imgur@kraggle09.github.io",
      "strict_min_version": "57.0"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon48.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://proxy.duckduckgo.com/*",
        "<all_urls>"
      ],
      "js": [
        "browser-polyfill.js",
        "jquery.min.js",
        "content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "browser-polyfill.js",
      "jquery.min.js",
      "background.js"
    ]
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*.imgur.com/*",
    "*://proxy.duckduckgo.com/*"
  ]
}